<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- constant name="struts.action.excludePattern" value="/_ah/.*?" / -->
	<!-- <include file="struts-default.xml" /> -->
	<package extends="struts-default" namespace="" name="callentry">

		<action name="login" class="com.callentry.action.LoginAction">
			<result name="success">WEB-INF/jsp/home.jsp</result>
		</action>
		<action name="*createUser" method="{1}" class="com.callentry.action.CreateUserAction">
			<result name="populated">WEB-INF/jsp/createUser.jsp</result>
			<result name="success">WEB-INF/jsp/userCreated.jsp</result>
		</action>

	</package>
</struts>